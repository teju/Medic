<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_gray"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ScrollView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:fillViewport="true"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="15dp"
                android:background="@color/light_gray"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="60dp"
                            android:src="@drawable/doctor_profile_pic_default"
                            android:id="@+id/profile_pic"
                            android:tint="@color/sky_blue"
                            android:layout_gravity="center_vertical"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="2dp"
                            android:layout_height="60dp">
                        </de.hdodenhof.circleimageview.CircleImageView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="8dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <EditText
                                android:layout_width="match_parent"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_med"
                                android:id="@+id/edt_one"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:singleLine="true"
                                android:layout_marginLeft="10dp"
                                android:hint="First Name"
                                android:layout_height="wrap_content">
                            </EditText>
                            <EditText
                                android:layout_width="match_parent"
                                android:textSize="@dimen/text_med"
                                android:imeOptions="actionNext"
                                android:hint="Last Name"
                                android:singleLine="true"
                                android:id="@+id/edt_two"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content">
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:paddingTop="15dp"
                    android:id="@+id/profile_details"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/ll_mobile_number"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_med"
                                android:text="Mobile Number"
                                android:layout_height="wrap_content">
                            </TextView>
                            <EditText
                                android:layout_width="match_parent"
                                android:textSize="@dimen/text_med"
                                android:editable="false"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:focusable="false"
                                android:id="@+id/phone_number"
                                android:inputType="number"
                                android:textColor="@color/dark_gray"
                                android:background="@drawable/button_border_rounder_rect"
                                android:layout_alignParentRight="true"
                                android:layout_height="40dp">
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/ll_email"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_med"
                                android:text="Email ID"
                                android:layout_height="wrap_content">
                            </TextView>
                            <EditText
                                android:layout_width="match_parent"
                                android:textSize="@dimen/text_med"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:background="@drawable/button_border_rounder_rect"
                                android:inputType="textEmailAddress"
                                android:id="@+id/edt_email_id"
                                android:drawablePadding="10dp"
                                android:textColor="@color/dark_gray"
                                android:layout_height="40dp">
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_med"
                                android:text="Experience"
                                android:layout_height="wrap_content">
                            </TextView>
                            <EditText
                                android:layout_width="match_parent"
                                android:textSize="@dimen/text_med"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:background="@drawable/button_border_rounder_rect"
                                android:inputType="number"
                                android:id="@+id/edt_exp_yrs"
                                android:drawablePadding="10dp"
                                android:textColor="@color/dark_gray"
                                android:layout_height="40dp">
                            </EditText>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_med"
                                android:text="Emergency Contact"
                                android:layout_height="wrap_content">
                            </TextView>
                            <EditText
                                android:layout_width="match_parent"
                                android:textSize="@dimen/text_med"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:background="@drawable/button_border_rounder_rect"
                                android:inputType="number"
                                android:id="@+id/emergency_contact"
                                android:drawablePadding="10dp"
                                android:textColor="@color/dark_gray"
                                android:layout_height="40dp">
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_location"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:padding="15dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    android:text="Location"
                                    android:layout_height="wrap_content">
                                </TextView>
                                <EditText
                                    android:layout_width="match_parent"
                                    android:textSize="@dimen/text_med"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="10dp"
                                    android:id="@+id/location"
                                    android:gravity="center_vertical"
                                    android:background="@drawable/button_border_rounder_rect"
                                    android:textColor="@color/dark_gray"
                                    android:layout_height="40dp">
                                </EditText>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_gender"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    android:text="Gender"
                                    android:layout_height="wrap_content">
                                </TextView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textSize="@dimen/text_med"
                                    android:layout_alignParentRight="true"
                                    android:text="Female"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="10dp"
                                    android:gravity="center_vertical"
                                    android:background="@drawable/button_border_rounder_rect"
                                    android:id="@+id/gender"
                                    android:layout_height="40dp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    android:text="Date of Birth"
                                    android:layout_height="wrap_content">
                                </TextView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textSize="@dimen/text_med"
                                    android:gravity="center_vertical"
                                    android:id="@+id/dob"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="10dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/button_border_rounder_rect"
                                    android:inputType="textEmailAddress"
                                    android:layout_height="40dp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_width="150dp"
                    android:id="@+id/btn_delete"
                    android:visibility="visible"
                    android:backgroundTint="@color/colorAccent"
                    android:background="@drawable/button_bg_selector"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_med"
                    android:layout_gravity="center_horizontal"
                    android:text="Save"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">

                </Button>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</FrameLayout>
