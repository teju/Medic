<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:id="@+id/llRoot"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/ripple_effects"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:id="@+id/logo"
                    android:src="@drawable/doctor_profile_pic_default"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="2dp"
                    android:layout_height="60dp">
                </de.hdodenhof.circleimageview.CircleImageView>
                <TextView
                    android:layout_width="10dp"
                    android:background="@drawable/chatbadge_rounded_rectangle"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="62dp"
                    android:textColor="@color/white"
                    android:layout_height="10dp">
                </TextView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/logo"
                android:layout_marginLeft="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/opensansbold"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/name"
                    android:textSize="@dimen/text_med"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/specialization"
                    android:textSize="@dimen/text_small"
                    android:fontFamily="@font/opensansregular"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/map_marker"
                    android:drawablePadding="3dp"
                    android:textStyle="bold"
                    android:id="@+id/distance"
                    android:textSize="@dimen/text_small"
                    android:fontFamily="@font/opensansregular"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_small"
                android:id="@+id/experience"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"

                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:id="@+id/btnappt"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:src="@drawable/calendar_month"
                    android:layout_marginLeft="20dp"
                    android:layout_height="30dp">

                </de.hdodenhof.circleimageview.CircleImageView>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:src="@drawable/chat"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:id="@+id/chat"
                    android:layout_marginLeft="15dp"
                    android:layout_height="30dp">
                </de.hdodenhof.circleimageview.CircleImageView>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:src="@drawable/phone"
                    android:id="@+id/call"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="30dp">
                </de.hdodenhof.circleimageview.CircleImageView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>