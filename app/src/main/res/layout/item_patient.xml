<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:src="@drawable/doctor_profile_pic"
                android:id="@+id/logo"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp"
                android:layout_height="60dp">
            </de.hdodenhof.circleimageview.CircleImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/logo"
                android:layout_marginLeft="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Anderson"
                    android:fontFamily="@font/opensansbold"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_med"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="+918765456778"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_small"
                    android:fontFamily="@font/opensansregular"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="12 Feb 2020, 12:45 PM"
                    android:textSize="@dimen/text_small"
                    android:fontFamily="@font/opensansregular"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/chat"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:id="@+id/chat"
                    android:layout_marginLeft="15dp"
                    android:layout_height="30dp">
                </de.hdodenhof.circleimageview.CircleImageView>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/phone"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:id="@+id/ph_call"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="30dp">
                </de.hdodenhof.circleimageview.CircleImageView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/chevron_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    app:tint="@color/grey"
                    android:layout_height="wrap_content">

                </ImageView>

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:backgroundTint="@color/light_gray"
            android:background="@drawable/button_bg_selector_rounded"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/llyrs"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:text="Age"
                        android:fontFamily="@font/opensansregular"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:text="36 yrs"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_toLeftOf="@+id/llweight"
                    android:layout_toRightOf="@+id/llyrs"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_horizontal"

                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/text_small"
                            android:text="Blood"
                            android:fontFamily="@font/opensansregular"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/text_small"
                            android:text="O +ve"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/text_small"
                            android:text="Height"
                            android:fontFamily="@font/opensansregular"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/text_small"
                            android:text="5'6 ft"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/llweight"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:text="Weight"
                        android:fontFamily="@font/opensansregular"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:text="40 kgs"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_small"
                android:fontFamily="@font/opensansregular"
                android:layout_marginTop="5dp"
                android:text="I'm suffering from fever from last 10 days"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/light_gray"
        android:layout_height="0.5dp">
    </View>
</LinearLayout>