<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/header"
        android:background="@color/light_gray"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/llBack"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/chevron_left"
                android:id="@+id/arrow_left"
                android:layout_marginLeft="20dp"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:layout_height="match_parent">
            </ImageView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:src="@drawable/doctor_profile_pic_default"
                android:id="@+id/logo"
                android:layout_toLeftOf="@+id/chat_ll"
                android:layout_centerVertical="true"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp"
                android:layout_marginRight="10dp"
                android:layout_height="40dp">
            </de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/chat_ll"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensansregular"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_med"
                    android:id="@+id/header_title"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="10dp"
                        android:src="@drawable/circle_shape"
                        android:tint="@color/green"
                        android:layout_gravity="center_vertical"
                        android:layout_height="10dp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Online"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/opensansregular"
                        android:textSize="@dimen/text_small"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"></View>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:id="@+id/recyclerView"
        android:divider="@null"
        android:background="@color/white"
        android:dividerHeight="0dp"
        android:layout_marginBottom="80dp"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/plain_plus"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:tint="@color/grey"
            android:id="@+id/add_btn"
            android:layout_height="30dp">
        </ImageView>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginRight="55dp"
            android:layout_toRightOf="@+id/add_btn"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/light_gray"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/opensansregular"
            android:textSize="@dimen/text_med"
            android:hint="Type a message"
            android:paddingLeft="20dp"
            android:drawablePadding="20dp"
            android:paddingRight="10dp"
            android:id="@+id/message"
            android:drawableRight="@drawable/microphone_outline"
            android:background="@drawable/button_bg_selector"
            android:layout_height="wrap_content">
        </EditText>
        <ImageView
            android:layout_width="40dp"
            android:id="@+id/send_msg"
            android:src="@drawable/send_circle"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:tint="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:layout_height="40dp">

        </ImageView>
    </RelativeLayout>
    <com.moguls.medic.etc.LoadingCompound
        android:id="@+id/ld"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="true"
        android:visibility="gone" />

</RelativeLayout>