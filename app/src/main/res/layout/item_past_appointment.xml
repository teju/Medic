<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray"
    android:id="@+id/llRoot"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/theme_rounded_rectangle"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:src="@drawable/doctor_profile_pic_default"
                    android:id="@+id/logo"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="60dp">
                </de.hdodenhof.circleimageview.CircleImageView>
                <TextView
                    android:layout_width="10dp"
                    android:background="@drawable/chatbadge_rounded_rectangle"
                    android:textSize="10dp"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="62dp"
                    android:textColor="@color/white"
                    android:layout_height="10dp">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Dr. Bill Anderson"
                        android:id="@+id/doctor_name"
                        android:fontFamily="@font/opensansbold"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_med"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="General Obstetrics"
                        android:textStyle="bold"
                        android:id="@+id/specialization"
                        android:textSize="@dimen/text_small"
                        android:fontFamily="@font/opensansregular"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Audio conssultation"
                        android:textStyle="bold"
                        android:id="@+id/address"
                        android:textSize="@dimen/text_small"
                        android:fontFamily="@font/opensansregular"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:src="@drawable/chat"
                    android:id="@+id/status"
                    android:text="Cancelled"
                    android:textSize="@dimen/text_small"
                    android:textAllCaps="false"
                    android:textColor="@color/red_color"
                    android:paddingRight="15dp"
                    android:background="@color/transparent"
                    android:layout_height="30dp">
                </Button>
                <Button
                    android:layout_width="90dp"
                    android:id="@+id/rebook"
                    android:text="Rebook"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="@dimen/text_small"
                    android:textAllCaps="false"
                    android:src="@drawable/phone"
                    android:background="@drawable/border_rounded_rectangle"
                    android:backgroundTint="@color/sky_blue"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="30dp">
                </Button>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/light_gray"
            android:layout_height="0.5dp">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Date and Time"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:fontFamily="@font/opensansregular"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="12 Feb 2020, 12:45 PM"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/date"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensansregular"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Patient Name"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_small"
                    android:layout_gravity="end"
                    android:fontFamily="@font/opensansregular"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Deepika Patil"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/patient_name"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensansregular"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>