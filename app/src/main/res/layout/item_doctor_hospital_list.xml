<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llRoot"
    android:orientation="vertical"
    android:background="@drawable/ripple_effects"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/llimg"
            android:layout_alignParentStart="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Fortis Hospital"
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/text_med"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="5 appointments"
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/dark_orange"
                android:textStyle="bold"
                android:textSize="@dimen/text_small"
                android:layout_height="wrap_content">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerview"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mon - Fri : 10.00AM - 9.00PM\nSat, Sun : 3.00PM - 9.00PM"
                android:fontFamily="@font/opensansregular"
                android:textSize="@dimen/text_small"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:orientation="vertical"
            android:id="@+id/llimg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/hospital_img"
                android:scaleType="fitXY"
                android:layout_height="80dp">
            </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="3.9 Km away"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/black"
                    android:baselineAligned="false"
                    android:includeFontPadding="false"
                    android:layout_gravity="fill"
                    android:textSize="@dimen/text_small"
                    android:layout_height="match_parent">
                </TextView>
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/navigation"
                    android:rotation="30"
                    app:tint="@color/sky_blue"
                    android:layout_marginLeft="5dp"
                    android:layout_height="20dp">
                </ImageView>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/light_gray"
        android:layout_height="0.5dp">
    </View>
</LinearLayout>
