<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/light_gray"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/light_gray"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:fontFamily="@font/opensansregular"
                android:textSize="@dimen/text_med"
                android:hint="Enter remarks"
                android:padding="15dp"
                android:id="@+id/statement"
                android:layout_height="wrap_content">
            </EditText>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/light_gray">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:fontFamily="@font/opensansregular"
                        android:textSize="@dimen/text_small"
                        android:background="@color/white"
                        android:text="Registration Proof"
                        android:layout_height="wrap_content">
                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="100dp"
                            android:src="@drawable/camera_plus"
                            android:id="@+id/reg_proof"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="100dp">

                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:fontFamily="@font/opensansregular"
                            android:textSize="@dimen/text_small"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/orange"
                            android:background="@color/white"
                            android:text="ADD Registration proof"
                            android:textAllCaps="true"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>

                </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:background="@color/light_gray"
                android:layout_height="0.5dp">
            </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:fontFamily="@font/opensansregular"
                        android:textSize="@dimen/text_small"
                        android:background="@color/white"
                        android:text="Degree Proof"
                        android:layout_height="wrap_content">
                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="100dp"
                            android:src="@drawable/camera_plus"
                            android:id="@+id/degree_proof"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="100dp">

                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:fontFamily="@font/opensansregular"
                            android:textSize="@dimen/text_small"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/orange"
                            android:background="@color/white"
                            android:text="edit proof"
                            android:textAllCaps="true"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:background="@color/light_gray"
                    android:layout_height="0.5dp">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:fontFamily="@font/opensansregular"
                        android:textSize="@dimen/text_small"
                        android:background="@color/white"
                        android:text="Photo ID Proof"
                        android:layout_height="wrap_content">
                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="100dp"
                            android:src="@drawable/camera_plus"
                            android:id="@+id/id_proof"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="100dp">

                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:fontFamily="@font/opensansregular"
                            android:textSize="@dimen/text_small"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/orange"
                            android:background="@color/white"
                            android:text="Add ID proof"
                            android:textAllCaps="true"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:background="@color/light_gray"
                    android:layout_height="0.5dp">
                </View>
                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="@dimen/text_small"
                    android:layout_gravity="center_horizontal"
                    android:padding="15dp"
                    android:textColor="@color/red"
                    android:background="@color/white"
                    android:text="*Registration and identification proof is mandatory"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>
            <Button
                android:layout_width="150dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="15dp"
                android:backgroundTint="@color/colorAccent"
                android:text="Save"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:background="@drawable/button_bg_selector"
                android:layout_height="40dp">

            </Button>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>