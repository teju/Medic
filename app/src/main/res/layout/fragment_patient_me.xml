<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/light_gray"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/update"
                    android:background="@drawable/ripple_effects"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/cog_outline"
                        android:id="@+id/settings"
                        android:layout_alignParentRight="true"
                        app:tint="@color/grey"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="60dp"
                            android:src="@drawable/doctor_profile_pic_default"
                            android:id="@+id/logo"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="2dp"
                            android:layout_height="60dp">
                        </de.hdodenhof.circleimageview.CircleImageView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    android:id="@+id/name"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="wrap_content">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="@dimen/text_small"
                                    android:id="@+id/experience"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content">
                                </TextView>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/text_small"
                                android:id="@+id/location"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/text_small"
                                android:text="Completed Profile 40%"
                                android:id="@+id/profile_completed"
                                android:textColor="@color/sky_blue"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_gravity="right"
                                android:layout_marginRight="15dp"
                                android:layout_height="wrap_content">
                            </TextView>

                            <ProgressBar
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/progress"
                                android:layout_marginRight="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:max="100"
                                android:progress="45"/>
                        </LinearLayout>

                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        app:tint="@color/grey"
                        android:src="@drawable/chevron_right"
                        android:layout_height="wrap_content">
                    </ImageView>
                </RelativeLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:text="Blood Group"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_med"
                        android:id="@+id/blood_group"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/light_gray"
                    android:layout_height="match_parent"></View>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:text="Height"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_med"
                        android:id="@+id/height"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent"></View>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:text="Weight"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_med"
                        android:id="@+id/weight"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:background="@color/light_gray"
                    android:layout_height="match_parent"></View>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/light_gray"
                android:layout_height="0.6dp">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/ll_doctor"
                android:background="@drawable/ripple_effects"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/account_multiple"
                        android:layout_centerVertical="true"
                        app:tint="@color/sky_blue"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_med"
                        android:layout_centerVertical="true"
                        android:text="My Doctors"
                        android:layout_marginLeft="35dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        app:tint="@color/grey"
                        android:src="@drawable/chevron_right"
                        android:layout_height="wrap_content">
                    </ImageView>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/light_gray"></View>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/ll_appointment"
                android:background="@drawable/ripple_effects"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/calendar_check_outline"
                        app:tint="@color/sky_blue"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_med"
                        android:text="Appointments"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        app:tint="@color/grey"
                        android:src="@drawable/chevron_right"
                        android:layout_height="wrap_content">
                    </ImageView>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/light_gray"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/ll_logout"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/logout"
                            app:tint="@color/sky_blue"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/text_med"
                            android:fontFamily="@font/opensansregular"
                            android:text="LogOut"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="end"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            app:tint="@color/grey"
                            android:src="@drawable/chevron_right"
                            android:layout_height="wrap_content">
                        </ImageView>

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/light_gray"></View>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_med"
            android:text="My Family"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center_horizontal|center_vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/plus"
                    android:id="@+id/btnadd"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ripple_effects_rounded"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="50dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Add"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textSize="@dimen/text_small"
                    android:fontFamily="@font/opensansregular"                         android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_patient"
                android:visibility="gone"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/no_patients"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="No Patients Found. Please add patient"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
    </LinearLayout>
    <com.moguls.medic.etc.LoadingCompound
        android:id="@+id/ld"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="true"
        android:visibility="gone" />

</FrameLayout>