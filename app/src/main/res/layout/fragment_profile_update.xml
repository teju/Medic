<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_gray"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <include layout="@layout/header"></include>
        <ScrollView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:fillViewport="true"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingBottom="25dp"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="60dp"
                            android:src="@drawable/doctor_profile_pic_default"
                            android:id="@+id/profile_pic"
                            android:tint="@color/sky_blue"
                            android:layout_gravity="center_vertical"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="2dp"
                            android:layout_height="60dp">
                        </de.hdodenhof.circleimageview.CircleImageView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <EditText
                                android:layout_width="match_parent"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_med"
                                android:id="@+id/edt_one"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:singleLine="true"
                                android:layout_marginLeft="10dp"
                                android:hint="First Name"
                                android:layout_height="wrap_content">
                            </EditText>
                            <EditText
                                android:layout_width="match_parent"
                                android:textSize="@dimen/text_med"
                                android:imeOptions="actionNext"
                                android:hint="Last Name"
                                android:singleLine="true"
                                android:id="@+id/edt_two"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content">
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/light_gray"
                    android:layout_height="12dp"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:id="@+id/profile_details"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/ll_mobile_number"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_med"
                                android:text="Mobile Number"
                                android:layout_height="wrap_content">
                            </TextView>
                            <EditText
                                android:layout_width="match_parent"
                                android:textSize="@dimen/text_med"
                                android:editable="false"
                                android:hint="Enter Mobile Number"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:focusable="false"
                                android:id="@+id/phone_number"
                                android:inputType="number"
                                android:textColor="@color/dark_gray"
                                android:background="@drawable/button_border_rounder_rect"
                                android:layout_alignParentRight="true"
                                android:layout_height="40dp">
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/ll_email"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_med"
                                android:text="Email ID"
                                android:layout_height="wrap_content">
                            </TextView>
                            <EditText
                                android:layout_width="match_parent"
                                android:textSize="@dimen/text_med"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:imeOptions="actionNext"
                                android:background="@drawable/button_border_rounder_rect"
                                android:inputType="textEmailAddress"
                                android:id="@+id/edt_email_id"
                                android:hint="Enter Email ID"
                                android:drawablePadding="10dp"
                                android:textColor="@color/dark_gray"
                                android:layout_height="40dp">
                            </EditText>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_med"
                                android:text="Height"
                                android:layout_height="wrap_content">
                            </TextView>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/button_border_rounder_rect"
                                android:layout_height="40dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <EditText
                                        android:layout_width="30dp"
                                        android:textSize="@dimen/text_med"
                                        android:inputType="number"
                                        android:maxLength="1"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_horizontal"
                                        android:imeOptions="actionNext"
                                        android:id="@+id/edt_height_ft"
                                        android:background="@color/transparent"
                                        android:textColor="@color/dark_gray"
                                        android:layout_height="match_parent">
                                    </EditText>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:textSize="@dimen/text_med"
                                        android:inputType="text"
                                        android:text="'"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_horizontal"
                                        android:imeOptions="actionNext"
                                        android:background="@color/transparent"
                                        android:textColor="@color/dark_gray"
                                        android:layout_height="match_parent">
                                    </TextView>

                                    <EditText
                                        android:layout_width="30dp"
                                        android:textSize="@dimen/text_med"
                                        android:inputType="number"
                                        android:maxLength="2"
                                        android:textAlignment="center"
                                        android:imeOptions="actionNext"
                                        android:id="@+id/edt_height_in"
                                        android:background="@color/transparent"
                                        android:textColor="@color/dark_gray"
                                        android:layout_height="match_parent">
                                    </EditText>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:textSize="@dimen/text_med"
                                        android:inputType="text"
                                        android:text='"'
                                        android:textAlignment="center"
                                        android:layout_gravity="center_horizontal"
                                        android:imeOptions="actionNext"
                                        android:background="@color/transparent"
                                        android:textColor="@color/dark_gray"
                                        android:layout_height="match_parent">
                                    </TextView>

                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:fontFamily="@font/opensansregular"
                                    android:text="ft &amp; in"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="15dp"
                                    android:textSize="@dimen/text_small"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_med"
                                android:text="Weight"
                                android:layout_height="wrap_content">
                            </TextView>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/button_border_rounder_rect"
                                android:layout_height="40dp">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:textSize="@dimen/text_med"
                                    android:inputType="numberDecimal"
                                    android:hint="Enter Weight"
                                    android:id="@+id/edtWeight"
                                    android:background="@color/transparent"
                                    android:textColor="@color/dark_gray"
                                    android:layout_height="wrap_content">
                                </EditText>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:fontFamily="@font/opensansregular"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="15dp"
                                    android:textSize="@dimen/text_small"
                                    android:text="in Kgs"
                                    android:layout_height="wrap_content">

                                </TextView>

                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_location"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:padding="15dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    android:text="Location"
                                    android:layout_height="wrap_content">
                                </TextView>
                                <EditText
                                    android:layout_width="match_parent"
                                    android:textSize="@dimen/text_med"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="10dp"
                                    android:id="@+id/location"
                                    android:hint="Enter Location"
                                    android:inputType="text"
                                    android:singleLine="true"
                                    android:gravity="center_vertical"
                                    android:background="@drawable/button_border_rounder_rect"
                                    android:textColor="@color/dark_gray"
                                    android:layout_height="40dp">
                                </EditText>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:background="@color/light_gray"
                                android:layout_height="0.5dp">
                            </View>
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_gender"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    android:text="Gender"
                                    android:layout_height="wrap_content">
                                </TextView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textSize="@dimen/text_med"
                                    android:layout_alignParentRight="true"
                                    android:text="Female"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="10dp"
                                    android:gravity="center_vertical"
                                    android:background="@drawable/button_border_rounder_rect"
                                    android:id="@+id/gender"
                                    android:layout_height="40dp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    android:text="Date of Birth"
                                    android:layout_height="wrap_content">
                                </TextView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textSize="@dimen/text_med"
                                    android:gravity="center_vertical"
                                    android:id="@+id/dob"
                                    android:hint="Select Date of Birth"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="10dp"
                                    android:background="@drawable/button_border_rounder_rect"
                                    android:inputType="textEmailAddress"
                                    android:layout_height="40dp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    android:text="Blood Group"
                                    android:layout_height="wrap_content">
                                </TextView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textSize="@dimen/text_med"
                                    android:id="@+id/blood_group"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="10dp"
                                    android:gravity="center_vertical"
                                    android:background="@drawable/button_border_rounder_rect"
                                    android:layout_alignParentRight="true"
                                    android:text="O +ve"
                                    android:layout_height="40dp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_status"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    android:text="Marital Status"
                                    android:layout_height="wrap_content">
                                </TextView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textSize="@dimen/text_med"
                                    android:id="@+id/marital_status"
                                    android:layout_alignParentRight="true"
                                    android:text="false"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="10dp"
                                    android:gravity="center_vertical"
                                    android:background="@drawable/button_border_rounder_rect"
                                    android:layout_height="40dp">
                                </TextView>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:background="@color/light_gray"
                                android:layout_height="0.5dp">
                            </View>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:padding="15dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    android:text="Emergency Contact"
                                    android:layout_height="wrap_content">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="@dimen/text_med"
                                    android:id="@+id/add_details"
                                    android:layout_marginLeft="10dp"
                                    android:layout_alignParentRight="true"
                                    android:text="add details"
                                    android:layout_height="wrap_content">
                                </TextView>
                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:background="@color/light_gray"
                                android:layout_marginTop="10dp"
                                android:layout_height="0.5dp">
                            </View>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_relation"
                            android:visibility="gone"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    android:text="Relationship"
                                    android:layout_height="wrap_content">
                                </TextView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textSize="@dimen/text_med"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="10dp"
                                    android:hint="Select Relationship"
                                    android:gravity="center_vertical"
                                    android:background="@drawable/button_border_rounder_rect"
                                    android:id="@+id/relation"
                                    android:layout_height="40dp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_add"
                            android:visibility="gone"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:padding="15dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="15dp"
                                    android:src="@drawable/plus"
                                    android:layout_centerVertical="true"
                                    android:layout_height="15dp">

                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/sky_blue"
                                    android:textSize="@dimen/text_med"
                                    android:id="@+id/add_more"
                                    android:text="Add More"
                                    android:layout_marginLeft="20dp"
                                    android:layout_height="wrap_content">
                                </TextView>
                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:background="@color/light_gray"
                                android:layout_height="0.5dp">
                            </View>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/btn_delete"
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:textColor="@color/red_color"
                    android:textSize="@dimen/text_med"
                    android:text="Delete"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">

                </Button>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <com.moguls.medic.etc.LoadingCompound
        android:id="@+id/ld"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="true"
        android:visibility="gone" />

</FrameLayout>
