<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/rlRoot"
        android:layout_height="match_parent">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/white"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingTop="20dp"
                    android:background="@color/light_white"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/chevron_left"
                        android:id="@+id/arrow_left"
                        android:layout_marginLeft="20dp"
                        app:tint="@color/black"
                        android:visibility="visible"
                        android:layout_height="wrap_content">
                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:id="@+id/lldoctor_profile"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="100dp"
                            android:src="@drawable/doctor_profile_pic_default"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="100dp">
                        </de.hdodenhof.circleimageview.CircleImageView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:id="@+id/doctor_name"
                                android:textSize="@dimen/text_med"
                                android:fontFamily="@font/opensansbold"
                                android:layout_marginTop="15dp"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="@dimen/text_small"
                                android:id="@+id/specialization"
                                android:layout_marginBottom="20dp"
                                android:fontFamily="@font/opensansregular"
                                android:layout_height="wrap_content">
                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/light_gray"
                    android:layout_height="0.5dp">

                </View>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"

                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Experience"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/text_small"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/opensansregular"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/experience"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_med"
                            android:fontFamily="@font/opensansregular"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="30dp"
                                android:id="@+id/call"
                                android:background="@drawable/ripple_effects"
                                android:src="@drawable/phone"
                                android:layout_centerVertical="true"
                                android:layout_height="30dp">
                            </ImageView>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="30dp"
                            android:id="@+id/chat"
                            android:background="@drawable/ripple_effects"
                            android:layout_centerVertical="true"
                            android:src="@drawable/chat"
                            android:layout_marginLeft="15dp"
                            android:layout_height="30dp">
                        </ImageView>
                        <ImageView
                            android:layout_width="30dp"
                            android:id="@+id/btnappt"
                            android:background="@drawable/ripple_effects"
                            android:layout_centerVertical="true"
                            android:src="@drawable/calendar_month"
                            android:layout_marginLeft="15dp"
                            android:layout_height="30dp">
                        </ImageView>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/light_gray"
                    android:layout_height="0.5dp">
                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/description"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/opensansregular"
                    android:layout_height="wrap_content">
                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/light_gray"
                    android:layout_height="0.5dp">
                </View>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/recyclerView"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/confirm"
            android:fontFamily="@font/opensansregular"
            android:backgroundTint="@color/colorAccent"
            android:background="@drawable/button_bg_selector"
            android:text="Confirm"
            android:textColor="@color/white"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/cancel"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/opensansregular"
            android:backgroundTint="@color/red"
            android:background="@drawable/button_bg_selector"
            android:text="Cancel"
            android:textColor="@color/white"
            android:layout_height="wrap_content">
        </Button>

    </LinearLayout>
    <com.moguls.medic.etc.LoadingCompound
        android:id="@+id/ld"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="true"
        android:visibility="gone" />

</RelativeLayout>