<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/update"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/cog_outline"
                    android:layout_alignParentRight="true"
                    android:tint="@color/grey"
                    android:visibility="gone"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                </ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:tint="@color/grey"
                    android:src="@drawable/chevron_right"
                    android:layout_height="wrap_content">
                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/llprofile"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:src="@drawable/doctor_profile_pic_default"
                        android:id="@+id/logo"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="2dp"
                        android:layout_height="60dp">
                    </de.hdodenhof.circleimageview.CircleImageView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_med"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/name"
                                android:fontFamily="@font/opensansregular"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/text_small"
                                android:fontFamily="@font/opensansregular"
                                android:id="@+id/age"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content">
                            </TextView>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/text_small"
                            android:id="@+id/specialization"
                            android:fontFamily="@font/opensansregular"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/text_small"
                            android:id="@+id/prodile_complete"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/sky_blue"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="15dp"
                            android:layout_height="wrap_content">
                        </TextView>

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/progress"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:max="100"
                            android:progress="45"/>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_small"
                    android:text="Education"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginLeft="15dp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_small"
                    android:fontFamily="@font/opensansregular"
                    android:id="@+id/education"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_gray"
                android:layout_height="match_parent"></View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_small"
                    android:fontFamily="@font/opensansregular"
                    android:text="Gender"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/gender"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="0.5dp"
                android:background="@color/light_gray"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"></View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_small"
                    android:fontFamily="@font/opensansregular"
                    android:text="Experience"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/experience"
                    android:fontFamily="@font/opensansregular"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="0.5dp"
                android:background="@color/light_gray"
                android:layout_height="match_parent"></View>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            android:layout_height="0.5dp">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_consulation_fee"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/currency_usd"
                    android:layout_centerVertical="true"
                    app:tint="@color/sky_blue"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_med"
                    android:fontFamily="@font/opensansregular"
                    android:layout_centerVertical="true"
                    android:text="Consultation Plan"
                    android:layout_marginLeft="35dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    app:tint="@color/grey"
                    android:src="@drawable/chevron_right"
                    android:layout_height="wrap_content">
                </ImageView>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="@color/light_gray"></View>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_patients"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/account_group"
                    app:tint="@color/sky_blue"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_med"
                    android:fontFamily="@font/opensansregular"
                    android:text="My Patients"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    app:tint="@color/grey"
                    android:src="@drawable/chevron_right"
                    android:layout_height="wrap_content">
                </ImageView>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="@color/light_gray"></View>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_hospitals"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/domain"
                    app:tint="@color/sky_blue"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_med"
                    android:fontFamily="@font/opensansregular"
                    android:text="Hospitals/Clinincs"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    app:tint="@color/grey"
                    android:src="@drawable/chevron_right"
                    android:layout_height="wrap_content">
                </ImageView>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="@color/light_gray"></View>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_logout"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/logout"
                    app:tint="@color/sky_blue"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_med"
                    android:fontFamily="@font/opensansregular"
                    android:text="LogOut"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    app:tint="@color/grey"
                    android:src="@drawable/chevron_right"
                    android:layout_height="wrap_content">
                </ImageView>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="@color/light_gray"></View>
        </LinearLayout>

    </LinearLayout>
    <com.moguls.medic.etc.LoadingCompound
        android:id="@+id/ld"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="true"
        android:visibility="gone" />

</RelativeLayout>