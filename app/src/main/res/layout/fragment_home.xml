<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/tools"
    android:background="@color/light_gray"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <include layout="@layout/nav_header"></include>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:elevation="5dp"
                android:clickable="true"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/book_appointment_banner"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:id="@+id/book_appointment_banner"
                    android:layout_height="200dp">
                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/ripple_effects"
                    android:id="@+id/upcoming_appt"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="60dp"
                            android:src="@drawable/doctor_profile_pic_default"
                            android:id="@+id/logo"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="2dp"
                            android:layout_height="60dp">
                        </de.hdodenhof.circleimageview.CircleImageView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_toRightOf="@+id/logo"
                            android:layout_marginLeft="16dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/opensansbold"
                                android:textColor="@color/black"
                                android:id="@+id/doctor_name"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_med"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textStyle="bold"
                                android:id="@+id/specialization"
                                android:textSize="@dimen/text_small"
                                android:fontFamily="@font/opensansregular"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_small"
                                android:id="@+id/address"
                                android:singleLine="true"
                                android:fontFamily="@font/opensansregular"
                                android:layout_height="wrap_content">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/text_small"
                            android:id="@+id/remarks"
                            android:singleLine="true"
                            android:layout_marginRight="100dp"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content">

                        </TextView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="5dp"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="30dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/chat"
                                android:id="@+id/chat"
                                android:background="?attr/selectableItemBackground"
                                android:layout_height="30dp">

                            </de.hdodenhof.circleimageview.CircleImageView>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="30dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/plus"
                                android:background="?attr/selectableItemBackground"
                                android:id="@+id/scan_doctor"
                                android:visibility="gone"
                                android:layout_marginLeft="15dp"
                                android:layout_height="30dp">
                            </de.hdodenhof.circleimageview.CircleImageView>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="30dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/phone"
                                android:id="@+id/call"
                                android:background="?attr/selectableItemBackground"
                                android:tint="@color/dark_orange"
                                android:layout_marginLeft="15dp"
                                android:layout_height="30dp">
                            </de.hdodenhof.circleimageview.CircleImageView>
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/light_gray"
                        android:layout_height="0.5dp">
                    </View>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Date and Time"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_small"
                                android:fontFamily="@font/opensansregular"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textStyle="bold"
                                android:id="@+id/date_time"
                                android:textSize="@dimen/text_small"
                                android:textColor="@color/black"
                                android:fontFamily="@font/opensansregular"
                                android:layout_height="wrap_content">
                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:fontFamily="@font/opensansregular"
                                android:text="Patient Name"
                                android:textSize="@dimen/text_small"
                                android:textStyle="bold"></TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_small"
                                android:id="@+id/patient_name"
                                android:textColor="@color/black"
                                android:fontFamily="@font/opensansregular"
                                android:layout_height="wrap_content">
                            </TextView>

                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ripple_effects"
                    android:id="@+id/ll_one"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/white"
                    android:gravity="center_vertical"
                    android:layout_height="80dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/icn_one"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:background="@drawable/circle_shape"
                        android:src="@drawable/img_doctor_white"
                        android:layout_gravity="center_vertical"
                        android:layout_height="40dp">
                    </ImageView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/icn_one"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:text="My Doctor"
                            android:id="@+id/tv_title_one"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/opensansregular"
                            android:textSize="@dimen/text_small"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/grey"
                            android:id="@+id/tv_desc_one"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/opensansregular"
                            android:textSize="@dimen/text_small"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        app:tint="@color/grey"
                        android:src="@drawable/chevron_right"
                        android:layout_height="wrap_content">
                    </ImageView>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/light_gray"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:background="@drawable/ripple_effects"
                    android:orientation="horizontal"
                    android:id="@+id/ll_two"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:layout_height="80dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/icn_two"
                        android:padding="10dp"
                        android:background="@drawable/circle_shape"
                        android:src="@drawable/file_document_multiple_outline_white"
                        android:layout_gravity="center_vertical"
                        android:layout_height="40dp">
                    </ImageView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/icn_two"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:text="Appointments"
                            android:id="@+id/tv_title_two"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/opensansregular"
                            android:textSize="@dimen/text_small"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/grey"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tv_desc_two"
                            android:fontFamily="@font/opensansregular"
                            android:textSize="@dimen/text_small"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        app:tint="@color/grey"
                        android:src="@drawable/chevron_right"
                        android:layout_height="wrap_content">
                    </ImageView>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/light_gray"
                    android:layout_height="0.5dp"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:id="@+id/ll_three"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ripple_effects"
                    android:gravity="center_vertical"
                    android:layout_height="80dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/icn_chat"
                        android:padding="10dp"
                        android:background="@drawable/circle_shape"
                        android:src="@drawable/img_chat_white"
                        android:layout_gravity="center_vertical"
                        android:layout_height="40dp">
                    </ImageView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/icn_chat"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:text="Chats"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/opensansregular"
                            android:textSize="@dimen/text_small"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/grey"
                            android:id="@+id/msgs_cnt"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/opensansregular"
                            android:textSize="@dimen/text_small"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        app:tint="@color/grey"
                        android:src="@drawable/chevron_right"
                        android:layout_height="wrap_content">
                    </ImageView>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/light_gray"
                    android:layout_height="0.5dp"></View>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/plain_plus"/>
    <com.moguls.medic.etc.LoadingCompound
        android:id="@+id/ld"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="true"
        android:visibility="gone" />

</FrameLayout>
